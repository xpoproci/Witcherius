@model Witcherius.PL.Models.UserProfileHeaderModel

<div class="description">
    <a class="name" href="@Url.Action("Detail", "User")">@User.Identity.Name</a>
    <span class="mail">
        @if (Model.MessageCount > 0)
        {
            <strong><a style="color: dodgerblue" href="@Url.Action("Messages", "User")">@Model.MessageCount <i class="glyphicon glyphicon-envelope"></i></a></strong>
        }
        else
        {
            <a href="@Url.Action("Messages", "User")">@Model.MessageCount <i class="glyphicon glyphicon-envelope"></i></a>
        }
        ¦
        <a href="@Url.Action("Logout", "Account")">Logout <i class="glyphicon glyphicon-off"></i></a>
    </span>
</div>
<div class="avatar" style="background-image: url('@Url.Content("~/Content/images/chars/" + Model.Avatar())')">
</div>