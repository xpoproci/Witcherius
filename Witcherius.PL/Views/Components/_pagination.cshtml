@model Witcherius.PL.Models.PaginationModel

<ul class="pagination">
    <li><a href="?page=@Model.LeftBound"><<</a></li>
    @if (Model.Current - 1 >= Model.LeftBound)
    {
        <li><a href="?page=@(Model.Current-1)"><</a></li>
    }
    @for (var i = Model.LeftBound; i <= Model.RightBound; i++)
    {
        if (i == Model.Current)
        {
            <li class="active"><a href="?page=@i">@i</a></li>
        }
        else
        {
            <li><a href="?page=@i">@i</a></li>
        }
    }
    @if (Model.Current + 1 <= Model.Last)
    {
        <li><a href="?page=@(Model.Current+1)">></a></li>
    }    
    <li><a href="?page=@Model.Last">>></a></li>
</ul>