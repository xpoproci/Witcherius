<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Witcherius - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div id="wraper">
        <div class="inner">
            <div class="top">
                <div class="logo">
                    <h1 class="hidden">Witcherius - @ViewBag.Title</h1>
                    <a href="@Url.Action("Index", "Home")"><img src="~/Content/images/logo.png" alt="logo - Witcherius" /></a>
                </div>
                <div class="menu">
                    <ul>
                        @{ Html.RenderAction("MenuHeader", "Components"); }
                    </ul>
                </div>
                <div class="profile">
                    @if (User.Identity.IsAuthenticated)
                    {
                        {
                            Html.RenderAction("UserProfileHeader", "Components", new { name = User.Identity.Name });
                        }
                    }
                </div>
            </div>
            <div class="clearfix"></div>

            <div class="content">
                @RenderBody()
            </div>

            <div class="footer">
                <p>&copy; @DateTime.Now.Year - Witcherius - Almost no rights reserved.</p>
            </div>
        </div>
    </div>
</body>
</html>